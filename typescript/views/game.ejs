<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QWords</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .game-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .letter-box {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 2px solid #dee2e6;
            margin: 0px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            line-height: 30px;
            transition: all 0.3s ease;
        }

        .correct {
            background-color: #28a745;
            color: white;
        }

        .wrong-position {
            background-color: #ffc107;
            color: black;
        }

        .incorrect {
            background-color: #dc3545;
            color: white;
        }

        .logo {
            max-height: 50px;
            transition: transform 0.3s ease-in-out;
        }

        .logo:hover {
            transform: rotate(10deg);
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        .shake {
            animation: shake 0.82s cubic-bezier(.36, .07, .19, .97) both;
        }

        @keyframes shake {
            10%, 90% { transform: translate3d(-1px, 0, 0); }
            20%, 80% { transform: translate3d(2px, 0, 0); }
            30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
            40%, 60% { transform: translate3d(4px, 0, 0); }
        }

        .game-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 1rem;
        }

        .game-table td {
            padding: 0.5rem;
            vertical-align: top;
        }

        .game-table .label {
            font-weight: bold;
            text-align: right;
            width: 30%;
        }

        .game-table .content {
            width: 70%;
        }

        .info-tip {
            background-color: #e7f3fe;
            border-left: 6px solid #2196F3;
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 4px;
        }

        .info-tip p {
            margin: 0;
        }

        .info-tip strong {
            color: #2196F3;
        }
    </style>
</head>
<body>
    <div class="container game-container">
        <h1 class="text-center mb-4"><img src="<%= basePath %>/images/Q.png" alt="Q" class="img-fluid logo"> Words</h1>
        <div class="info-tip">
            <p><%= message %></p>
        </div>

        <table class="game-table">
            <tr>
                <td colspan="2">
                    <div class="text-center">
                        <input type="hidden" id="value_of_status" name="value_of_status" value="<%= status %>"/>                                                <% if (status === 'INPROGRESS') { %>
                            <form method="post" action="<%= basePath %>/game" class="mb-3">
                                <div class="input-group mb-3">
                                    <input type="text" name="guess" class="form-control" required pattern="[a-zA-Z]{6}"
                                        title="Enter a word with 6 letters" placeholder="Enter a 6-letter word." />
                                    <input type="hidden" id="attempts" name="attempts" value="<%= attempts %>">
                                    <input type="hidden" id="user" name="user" value="<%= user %>"/>
                                    <button class="btn btn-primary" type="submit">MAKE GUESS</button>
                                </div>
                            </form>
                        <% } else if (status === 'FAILED') { %>
                            <form method="get" action="<%= basePath %>/" class="mb-3">
                                <input type="hidden" id="user" name="user" value="<%= user %>" />
                                <button class="btn btn-danger" type="submit">TRY AGAIN</button>
                            </form>
                        <% } else if (status === 'SUCCESS') { %>
                            <form method="get" action="<%= basePath %>/" class="mb-3">
                                <input type="hidden" id="user" name="user" value="<%= user %>" />
                                <button class="btn btn-success" type="submit">PLAY AGAIN</button>
                            </form>
                        <% } %>
                    </div>
                </td>
            </tr>
            
            <% if (typeof guess !== 'undefined' && guess) { %>
                <tr>
                    <td class="label">Last Guessed Word:</td>
                    <td class="content">
                    <div class="text-center" id="guessedWord">
                        <span><%= guess %></span>
                    </div>
                </td>
            </tr>
            <% } %>

            <% if (typeof result !== 'undefined' && result) { %>
            <tr>
                <td class="label">Result:</td>
                <td class="content">
                    <div class="text-center" id="result">
                        <% result.split('').forEach(function(c) { %>
                            <span class="letter-box <%= c === '+' ? 'correct' : (c === '?' ? 'wrong-position' : 'incorrect') %>">
                                <%= c.toLowerCase() %>
                            </span>
                        <% }); %>
                    </div>
                </td>
            </tr>
            <% } %>
            <tr>
                <td class="label">Attempts:</td>
                <td class="content">
                    <span class="fw-bold"><%= attempts %></span>
                </td>
            </tr>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="<% basePath %>/js/game.js"></script>
</body>
</html>